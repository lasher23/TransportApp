<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import tech.bison.utils.AutoCompleteTextField?>

<VBox prefHeight="364.0" prefWidth="543.0"
	xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="tech.bison.transportapp.view.tableboard.TableBoardController">
	<children>
		<GridPane VBox.vgrow="ALWAYS">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
					<children>
						<AutoCompleteTextField fx:id="txtStationName"
							maxWidth="1.7976931348623157E308" prefWidth="150.0" VBox.vgrow="ALWAYS" onKeyPressed="#onTxtStationNameKeyPressed">
							
							<VBox.margin>
								<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
							</VBox.margin>
						</AutoCompleteTextField>
					</children>

				</VBox>
				<VBox alignment="CENTER" GridPane.rowIndex="1">
					<children>
						<Button mnemonicParsing="false" onAction="#onSearchClick"
							prefHeight="25.0" prefWidth="189.0" text="Search" />
					</children>
				</VBox>
			</children>
		</GridPane>
		<TableView fx:id="table" prefHeight="200.0" prefWidth="200.0"
			VBox.vgrow="ALWAYS">
			<columns>
				<TableColumn fx:id="columnName" prefWidth="75.0" text="Name" />
				<TableColumn fx:id="columnDeparture" prefWidth="75.0"
					text="Abfahrtszeit" />
				<TableColumn fx:id="columnDestination" prefWidth="75.0"
					text="Zielort" />
			</columns>
			<VBox.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</VBox.margin>
		</TableView>
	</children>
</VBox>
